{% extends "home/index.html.twig" %}

{% block header %}
	<!-- Start Banner Area -->
	<section class="banner-area organic-breadcrumb">
		<div class="container">
			<div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
				<div class="col-first">
					<h1>
						inscrire</h1>
					<nav class="d-flex align-items-center">
						<a href="index.html">welcome</a>
					</nav>
				</div>
			</div>
		</div>
	</section>
	<!-- End Banner Area -->
{% endblock %}
{% block body %}
	<!--================Login Box Area =================-->
	<section class="login_box_area section_gap">
		<div class="container">
			<div class="row">
				<div class="col-lg-6" style="margin: 0 auto; width: 50%;">
					<div class="login_form_inner">
						<h3>inscription</h3>
						{{form_start(form, {'attr': {'novalidate': 'novalidate'}})}}
						<div class="col-12">
							<div>
								{{form_label(form.nom, 'nom')}}
								{{form_widget(form.nom,{
								'attr' :{
									'class' : 'form-control',
									'placeholder':'nom'
								},
							})}}
								{{form_errors(form.nom)}}
							</div>
						</div>
						<div class="col-12">
							<div>
								{{form_label(form.prenom, 'prenom')}}
								{{form_widget(form.prenom,{
								'attr' :{
									'class' : 'form-control',
									'placeholder':'prenom'
								}
									
							
							})}}
								{{form_errors(form.prenom,{'attr' :{'class' : 'text-danger'}})}}
							</div>
						</div>
						<div class="col-12">
							<div>
								{{form_label(form.email, 'email')}}
								{{form_widget(form.email,{
								'attr' :{
									'class' : 'form-control',
									'placeholder':'email'
								},
							})}}
								{{form_errors(form.email)}}
							</div>
						</div>

						<div class="col-12">
							<div>
								{{form_label(form.num_tel, 'telephone')}}
								{{form_widget(form.num_tel,{
								'attr' :{
									'class' : 'form-control',
									'placeholder':'telephone'
								},
							})}}
								{{form_errors(form.num_tel)}}
							</div>
						</div>
						<div class="col-12">
							<div>
								{{form_label(form.adresse, 'adresse')}}
								{{form_widget(form.adresse,{
								'attr' :{
									'class' : 'form-control',
									'placeholder':'adresse'
								},
							})}}
								{{form_errors(form.adresse)}}
							</div>
						</div>
						<div class="col-12">
							{{form_label(form.password, 'password')}}
							{{form_widget(form.password,{
								'attr' :{
									'class' : 'form-control',
									'placeholder':'password'
								},
							})}}
							{{form_errors(form.password)}}

						</div>
						<div class="col-12">
							{{form_label(form.confirmPassword, 'confirmPassword')}}
							{{form_widget(form.confirmPassword,{
								'attr' :{
									'class' : 'form-control',
									'placeholder':'confirmpassword'
								},
							})}}
							{{form_errors(form.confirmPassword)}}

						</div>
						<div class="col-12">
							{{form_label(form.role, 'role')}}
							{{form_widget(form.role,{
								'attr' :{
									'class' : 'form-control'
								},
							})}}
							{{form_errors(form.role)}}

						</div>

						<div class="text-center">
							<br>
							{{ form_widget(form) }}
							<button type="submit" class="btn btn-primary">
								{{ button_label|default('inscrire') }}
							</button>
						</div>
						{{form_end(form)}}
					</div>
				</div>
			</div>
		</div>
	</section>
	<!--================End Login Box Area =================-->
{% endblock %}
