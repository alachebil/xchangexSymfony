{% extends 'Admin/index.html.twig' %}

{% block title %}Log in!
{% endblock %}
{% block header %}{% endblock %}

{% block body %}

	<section class="login_box_area section_gap">

		<div class="container">
			<div class="row">
				<div class="col-lg-6">
					<div class="login_box_img">
						<img class="img-fluid" src="{{asset('img/login.png')}}" alt="">
						

						<h4>welcome to Xchangex</h4>
							<p>We are proud to welcome you to our service-Product exchange website </p>
					</div>

					<div class="d-flex align-items-center justify-content-between mb-3">
							
						
							<a class="btn btn-warning rounded-pill m-2" href="{{path('app_register')}}">Sign up</a>
					
						</div>
				</div>
				<div class="col-lg-6">
					{% if error %}
						<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}

					<form method="post">
						<div class="bg-light rounded p-4 p-sm-5 my-4 mx-3">
							<h3>Log in to enter</h3>
							<div class="row login_form" id="contactForm">

								<div class="col-md-12 form-group">
									<label for="inputEmail">Email</label>
									<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" placeholder="email" autofocus></div>

								<div class="col-md-12 form-group">
									<label for="inputPassword">Password</label>
									<input type="password" name="password" id="inputPassword" class="form-control" placeholder="password" autocomplete="current-password">
								</div>
								<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

								
								

							</div>

						</div>


						<div class="m-n2">
								<button class="btn btn-primary w-100 m-2" type="submit">
									Sign in
								</button>
								</div>



								<div class="m-n2">
								<a class="btn btn-danger rounded-pill m-2" href="{{path('forgot_password_sms')}}">Mot de passe oubli√©</a>
								</div>
					</form>
					
					
				
			</div>
			
		</div>
	</section>
{% endblock %}
{% block footer %}{% endblock %}
